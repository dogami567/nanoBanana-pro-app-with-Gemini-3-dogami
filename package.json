{
  "name": "nano-banana-app",
  "version": "0.0.3",
  "description": "基于 Gemini 2.5 Flash Image 的双图合成工具",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "dist": "npm run build"
  },
  "keywords": ["gemini", "image", "ai", "generator", "electron"],
  "author": "Claude Code",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "electron": "^22.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.claude.nano-banana",
    "productName": "Nano Banana",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "index.html",
      "styles.css",
      "script.js", 
      "api.js",
      "utils.js",
      "CLAUDE.md",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.graphics-design",
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}